
{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"],
    },
    "lib": ["es2023"],
    "strict": true,
    "esModuleInterop": true,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "scripts/**/*",
    "**/*.js"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}