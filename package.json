{
  "name": "jmdict-sqlite",
  "description": "Read-only SQLite database for JMDict, a Japanese-English dictionary.",
  "author": "Sean McBroom (sean.mcbroom@outlook.com)",
  "version": "0.5.0",
  "type": "module",
  "engines": {
    "node": ">=22.11.0 <23.0.0",
    "npm": ">=10.9.0",
    "yarn": "yarn is not supported. Please use npm"
  },
  "scripts": {
    "start": "node dist/src/index.js",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc && tsc-alias && npm run copy:resources",
    "copy:resources": "copyfiles -u 1 \"test/**/*.xml\" dist/test",
    "dev": "tsx src/index.ts",
    "test": "npm run build && node --test dist/test/**/*.test.js",
    "test:dev": "tsx --test test/**/*.test.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "download-jmdict": "tsx scripts/download-jmdict.ts",
    "github:parse-jmdict": "npm run download-jmdict && npm run build && npm run start"
  },
  "keywords": [
    "JMdict",
    "Japanese",
    "日本語"
  ],
  "license": "ISC",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.1.0",
    "@types/sax": "^1.2.7",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-unused-imports": "^4.1.4",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "dependencies": {
    "basic-ftp": "^5.0.5",
    "better-sqlite3": "^12.2.0",
    "sax": "^1.4.1"
  }
}
