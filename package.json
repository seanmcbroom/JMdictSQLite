{
  "name": "jmdict-sqlite",
  "description": "Read-only SQLite database for JMDict and Kanjidic, a Japanese-English dictionary.",
  "author": "Sean McBroom (sean.mcbroom@outlook.com)",
  "license": "GPLv2",
  "version": "1.5.0",
  "type": "module",
  "engines": {
    "node": ">=22.17.0",
    "npm": ">=10.9.2",
    "yarn": "yarn is not supported. Please use npm"
  },
  "scripts": {
    "1": "Main commands",
    "start": "node dist/src/index.js",
    "dev": "npm run clean:data-sqlite && tsx src/index.ts",
    "build": "npm run clean:build && tsc && tsc-alias && npm run copy:test-files-to-dist",

    "2": "Linting",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",

    "3": "Testing",
    "test": "npm run build && node dist/test/runner.js",
    "test:dev": "tsx dist/test/runner.ts",

    "4": "JMdict/Packaging",
    "create-release": "npm run build && npm run start",

    "5": "File handling",
    "clean:dist": "rimraf dist",
    "clean:data-sqlite": "rimraf /data/jmdict.sqlite",
    "clean:data-jmdict": "rimraf /data/jmdict.xml",
    "clean:build": "npm run clean:dist && npm run clean:data-sqlite",
    "clean:all": "npm run clean:dist && npm run clean:data-sqlite && npm run clean:data-jmdict",
    "copy:test-files-to-dist": "copyfiles -u 1 \"test/**/*.xml\" dist/test"
  },
  "devDependencies": {
    "@types/better-sqlite3": "7.6.13",
    "@types/node": "25.3.0",
    "@types/sax": "1.2.7",
    "@typescript-eslint/eslint-plugin": "8.56.0",
    "copyfiles": "2.4.1",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "5.5.5",
    "eslint-plugin-unused-imports": "4.3.0",
    "prettier": "3.8.1",
    "rimraf": "6.1.3",
    "ts-node": "10.9.2",
    "tsc-alias": "1.8.16",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.56.0"
  },
  "dependencies": {
    "basic-ftp": "5.2.0",
    "better-sqlite3": "12.6.2",
    "sax": "1.4.4"
  }
}
